{
  "name": "realtime-translation-tool",
  "version": "1.0.0",
  "main": "electron-main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "python main.py",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"python3 main.py\" \"wait-on http://localhost:5173 && wait-on http://localhost:3000 && electron .\"",
    "electron-dev-simple": "NODE_ENV=development electron .",
    "electron-pack": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "icon:mac": "bash scripts/generate-icns.sh",
    "dist-mac": "npm run icon:mac && npm run build && electron-builder --mac --x64",
    "dist-win": "npm run build && electron-builder --win",
    "dist-linux": "npm run build && electron-builder --linux",
    "build-secure": "chmod +x build-secure-app.sh && ./build-secure-app.sh",
    "build-secure-mac": "chmod +x build-secure-app.sh && ./build-secure-app.sh mac",
    "build-secure-win": "chmod +x build-secure-app.sh && ./build-secure-app.sh win"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "vite": "^5.2.0",
    "wait-on": "^8.0.4"
  }
}
