{
  "appId": "com.realtimetranslation.app",
  "productName": "Realtime Translation Tool",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron-main.js",
    "electron-preload.js",
    "package.json"
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64"]
      }
    ],
    "category": "public.app-category.productivity"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ]
  },
  "dmg": {
    "title": "Realtime Translation Tool"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}